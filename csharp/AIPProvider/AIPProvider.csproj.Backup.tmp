<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Condition="!Exists('.\devOnBuild.bat')" Command="call onBuild.bat" />
		<Exec Condition="Exists('.\devOnBuild.bat')" Command="call devOnBuild.bat" />
	</Target>

	<ItemGroup>
	  <PackageReference Include="CommandLineParser" Version="2.9.1" />
	  <PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.22.1" />
	  <PackageReference Include="Microsoft.ML.OnnxRuntime.Managed" Version="1.22.2" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="AIPilot">
			<HintPath Condition="Exists('..\AIPilot\bin\Debug\net6.0\AIPilot.dll')">..\AIPilot\bin\Debug\net6.0\AIPilot.dll</HintPath>
			<HintPath Condition="Exists('..\AIPSim\AIPilot.dll')">..\AIPSim\AIPilot.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="src\Noise\" />
	</ItemGroup>

</Project>